<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/sign_button_width"
    android:layout_height="@dimen/sign_button_height"
    android:layout_gravity="center"
    android:hapticFeedbackEnabled="true">

    <ImageView
        android:id="@+id/signin_logo"
        android:layout_width="@dimen/sign_logo_width"
        android:layout_height="@dimen/sign_logo_height"
        android:layout_marginStart="16dp"
        android:src="@drawable/google_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/google" />

    <TextView
        android:id="@+id/signin_button_text"
        android:layout_width="184dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sign_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>